# =============================================================================
# Local Secrets for Terraform
# =============================================================================
#
# This file contains sensitive credentials for Terraform deployment.
# Copy this file to local-secrets.tfvars and fill in your values.
#
# IMPORTANT: Never commit local-secrets.tfvars to version control!
#            It is already in .gitignore.
#
# Usage: terraform apply -var-file="local-secrets.tfvars"
# =============================================================================

# =============================================================================
# Project Configuration
# =============================================================================

github_owner = ""  # GitHub organization or username
github_repo  = ""  # GitHub repository name

# =============================================================================
# Supabase Credentials
# =============================================================================
# Get these from: https://supabase.com/dashboard/project/<project>/settings/api

supabase_url                  = ""  # e.g., "https://abcdefghijk.supabase.co"
supabase_anon_key_value       = ""  # Safe for frontend
supabase_service_role_key_value = "" # KEEP SECRET!
supabase_jwt_secret_value     = ""  # For JWT generation (Settings > API > JWT Secret)

# =============================================================================
# Authentication Provider Selection
# =============================================================================
# Choose which auth provider to use: "okta" or "clerk"
auth_provider = "okta"

# =============================================================================
# Okta Credentials (when auth_provider = "okta")
# =============================================================================
# Get these from your Okta Admin Console > Applications > Your App

okta_domain        = ""  # e.g., "your-company.okta.com"
okta_client_id     = ""  # From OIDC app settings
okta_client_secret = ""  # KEEP SECRET!
okta_issuer        = ""  # e.g., "https://your-company.okta.com/oauth2/default"
okta_jwks_uri      = ""  # e.g., "https://your-company.okta.com/oauth2/default/v1/keys"
okta_audience      = ""  # Usually the client ID or API identifier

# =============================================================================
# Clerk Credentials (when auth_provider = "clerk")
# =============================================================================
# Get these from your Clerk Dashboard > API Keys

clerk_publishable_key = ""  # e.g., "pk_test_xxx"
clerk_secret_key      = ""  # KEEP SECRET! e.g., "sk_test_xxx"
clerk_issuer          = ""  # e.g., "https://clerk.your-domain.com"
clerk_audience        = ""  # Optional, for additional validation

# =============================================================================
# NextAuth.js Configuration
# =============================================================================
# Required for session encryption when using NextAuth.js with any auth provider
# Generate a secure random secret with: openssl rand -base64 32

nextauth_secret = ""  # REQUIRED: 32+ character random string (KEEP SECRET!)

# =============================================================================
# App Runner Configuration
# =============================================================================
# Domain for the App Runner service
# - Use App Runner auto-generated URL: "{{PROJECT_NAME}}-dev-web.us-east-1.awsapprunner.com"
# - Or use custom domain: "app.yourdomain.com" (requires DNS setup)
# This is used for NextAuth URL and CORS configuration

app_domain = ""  # e.g., "ccat.simptech.io" or "ai-mod-dev.example.com"

# CORS allowed origins for API Gateway
# - Dev: Use ["*"] for convenience
# - Production: Use explicit origins like ["https://ccat.simptech.io"]
allowed_origins = ["*"]  # Change to specific origins for production

# =============================================================================
# AWS Secrets Manager ARNs (populated after initial deployment)
# =============================================================================
# These are created by Terraform and populated automatically
# Leave empty for initial deployment

# supabase_secret_arn = ""  # Created by secrets module
# auth_secret_arn     = ""  # Created by secrets module

# =============================================================================
# Optional: API Gateway Configuration
# =============================================================================
# Leave empty for initial deployment - populated by Terraform

# api_gateway_id       = ""
# api_gateway_endpoint = ""
