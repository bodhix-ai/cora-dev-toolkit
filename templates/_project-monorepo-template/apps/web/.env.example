# ${project_display_name} Application Environment Variables

# =============================================================================
# Authentication Provider Configuration
# =============================================================================
# Choose your authentication provider: "clerk" or "okta"
# This determines which auth system your application uses
NEXT_PUBLIC_AUTH_PROVIDER=okta

# --- Clerk Authentication ---
# Use these if NEXT_PUBLIC_AUTH_PROVIDER=clerk
# Get credentials from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# --- Okta Authentication ---
# Use these if NEXT_PUBLIC_AUTH_PROVIDER=okta
# Get credentials from: https://developer.okta.com
OKTA_DOMAIN=dev-12345678.okta.com
OKTA_CLIENT_ID=your_okta_client_id_here
OKTA_CLIENT_SECRET=your_okta_client_secret_here
OKTA_ISSUER=https://dev-12345678.okta.com/oauth2/default

# --- NextAuth Configuration ---
# Required when using Okta authentication
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# Database Configuration
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# API Endpoints
# =============================================================================
# Legacy API Gateway (for non-CORA endpoints like chat, projects)
NEXT_PUBLIC_API_BASE_URL=https://your-api-gateway-url.com

# CORA Modular API Gateway (for org-module, ai-config-module, ai-enablement-module, kb-module)
NEXT_PUBLIC_CORA_API_URL=https://your-cora-api-gateway-url.com

# WebSocket API for real-time streaming
NEXT_PUBLIC_WS_BASE_URL=wss://your-websocket-url.com/production

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-1

# =============================================================================
# Development Overrides (Optional)
# =============================================================================
# For local development, you can use these values:
# NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
# NEXT_PUBLIC_WS_BASE_URL=ws://localhost:3001
# NEXTAUTH_URL=http://localhost:3000
