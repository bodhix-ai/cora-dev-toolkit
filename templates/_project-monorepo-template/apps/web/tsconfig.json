{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@{{PROJECT_NAME}}/api-client": ["../../packages/api-client"],
      "@{{PROJECT_NAME}}/shared-types": ["../../packages/shared-types"],
      "@{{PROJECT_NAME}}/contracts": ["../../packages/contracts"],
      "@{{PROJECT_NAME}}/shared": ["../../packages/shared"],
      "@{{PROJECT_NAME}}/module-access": ["../../packages/module-access/frontend"],
      "@{{PROJECT_NAME}}/module-ai": ["../../packages/module-ai/frontend"],
      "@{{PROJECT_NAME}}/module-ws": ["../../packages/module-ws/frontend"],
      "@{{PROJECT_NAME}}/module-mgmt": ["../../packages/module-mgmt/frontend"],
      "@{{PROJECT_NAME}}/module-kb": ["../../packages/module-kb/frontend"],
      "@{{PROJECT_NAME}}/module-chat": ["../../packages/module-chat/frontend"],
      "@{{PROJECT_NAME}}/module-eval": ["../../packages/module-eval/frontend"],
      "@{{PROJECT_NAME}}/module-voice": ["../../packages/module-voice/frontend"],
      "@{{PROJECT_NAME}}/module-eval-studio": ["../../packages/module-eval-studio/frontend"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.ts",
    "../../packages/*/frontend/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
