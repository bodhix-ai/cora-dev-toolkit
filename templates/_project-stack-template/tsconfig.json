{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@{{PROJECT_NAME}}/api-client": ["packages/api-client/src"],
      "@{{PROJECT_NAME}}/shared-types": ["packages/shared-types/src"],
      "@{{PROJECT_NAME}}/module-access/*": [
        "packages/module-access/frontend/*"
      ],
      "@{{PROJECT_NAME}}/module-ai/*": ["packages/module-ai/frontend/*"],
      "@{{PROJECT_NAME}}/module-mgmt/*": ["packages/module-mgmt/frontend/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build", ".next"]
}
